---
import { MODULE_VIEWBOX } from "../../data/MODULE_VIEWBOX";
const { module = "" } = Astro.props;

import HeroSvg from "../Hero/HeroSvg.astro";
---

<section
  id="module-hero"
  class="gradient-bg"
  data-module={module ? module : null}
>
  <div class="wrapper | grid">
    <div class="hero__cta | grid">
      <slot />
    </div>
    <div>
      <HeroSvg module={module} />
    </div>
  </div>
</section>

<style>
  .hero__cta {
    --gap: var(--space-6);
    place-content: center;

    & p {
      line-height: 1.3;
      font-size: var(--fs-500);
    }
  }

  .wrapper {
    --gap: var(--space-3) var(--space-6);
  }

  @media screen and (min-width: 768px) {
    .wrapper {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
