  }

  .skip-link {
    --outline-offset: -8px;
    position: absolute;
    top: 0;
    left: 50%;
    padding: var(--space-2) var(--space-3);
    transform: translateX(-50%);
    background-color: var(--clr-footer-theme-toggler-accent);
    color: var(--clr-footer-theme-toggler-text);
  }

  header a {
    color: var(--clr-header-link);
    font-family: var(--ff-title);
    font-weight: 500;
    text-decoration-color: transparent;
  }

  header ul {
    --cluster-space: var(--space-3);
  }
